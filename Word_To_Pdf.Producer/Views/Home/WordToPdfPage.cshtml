@model WordToPdf
@{
    ViewData["Title"] = "WordToPdfPage";
}

<h1>WordToPdfPage</h1>
<h2>@ViewBag.result </h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="WordToPdfPage" asp-controller="Home" method="post" enctype="multipart/form-data">


            <div class="form-group">
                <label asp-for="WordFile" class="custom-control-label"></label>
                <input asp-for="WordFile" class="form-control" />



            </div>

               <div class="form-group">
                <label asp-for="Email" class="custom-control-label"></label>
                <input asp-for="Email" class="form-control" />



            </div>
            <br />
            <div class="form-group">
                <input  type="submit" value="Dönüştür" class="btn btn-primary"/>
            </div>


        </form>




    </div>
</div>